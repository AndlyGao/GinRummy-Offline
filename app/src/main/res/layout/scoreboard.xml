<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/frmMainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_bg"></FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_title"
            android:gravity="center"
            android:shadowColor="@color/black"
            android:shadowDy="2"
            android:shadowRadius="1"
            android:text="Scoreboard"
            android:textColor="@color/yellow"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ivLineTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/line3"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/llUserInfoRowContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:id="@+id/tvRoundText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:gravity="center"
                android:text="R\nO\nU\nN\nD"
                android:textColor="@color/white"
                android:textSize="14sp" />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.2"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/ivUserOne"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_gravity="center_horizontal"
                        app:border_color="@color/red"
                        app:border_width="2dp" />

                    <ImageView
                        android:id="@+id/ivUserOneYouTag"
                        android:layout_width="45dp"
                        android:layout_height="40dp"
                        android:layout_gravity="left|top"
                        android:layout_marginLeft="-3dp"
                        android:background="@drawable/youtag"
                        android:visibility="invisible" />

                </FrameLayout>

                <TextView
                    android:id="@+id/ivUserNameOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Artoon 1"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.2"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/ivUserTwo"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_gravity="center_horizontal"
                        app:border_color="@color/red"
                        app:border_width="2dp" />

                    <ImageView
                        android:id="@+id/ivUserTwoYouTag"
                        android:layout_width="45dp"
                        android:layout_height="40dp"
                        android:layout_gravity="left|top"
                        android:layout_marginLeft="-3dp"
                        android:background="@drawable/youtag"
                        android:visibility="invisible" />

                </FrameLayout>

                <TextView
                    android:id="@+id/ivUserNameTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Artoon 2"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llThirdUserInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.2"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/ivUserThree"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_gravity="center_horizontal"
                        app:border_color="@color/red"
                        app:border_width="2dp" />

                    <ImageView
                        android:id="@+id/ivUserThreeYouTag"
                        android:layout_width="45dp"
                        android:layout_height="40dp"
                        android:layout_gravity="left|top"
                        android:layout_marginLeft="-3dp"
                        android:background="@drawable/youtag"
                        android:visibility="invisible" />

                </FrameLayout>

                <TextView
                    android:id="@+id/ivUserNameThree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Artoon 3"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:id="@+id/ivLineSep1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:id="@+id/tvScoreText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:gravity="center"
                android:text="Score"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvUserOneScore"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/title_yellow"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/tvUserTwoScore"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/title_yellow"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/tvUserThreeScore"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/title_yellow"
                android:textSize="22sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/ivLineSep2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="3dp"
            android:background="@drawable/line" />

        <ListView
            android:id="@+id/Sco_listview"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:cacheColorHint="@android:color/transparent"
            android:divider="@drawable/line"
            android:listSelector="@android:color/transparent"
            android:overScrollMode="never"></ListView>


    </LinearLayout>

    <ImageView
        android:id="@+id/ivVerticleLine1"
        android:layout_width="wrap_content"
        android:layout_height="340dp"
        android:layout_marginLeft="62dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/line_vertical" />

    <ImageView
        android:id="@+id/ivVerticleLine2"
        android:layout_width="wrap_content"
        android:layout_height="340dp"
        android:layout_gravity="center"
        android:layout_marginRight="64dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/line_vertical" />

    <ImageView
        android:id="@+id/ivVerticleLine3"
        android:layout_width="wrap_content"
        android:layout_height="340dp"
        android:layout_gravity="center"
        android:layout_marginLeft="128dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/line_vertical" />

    <Button
        android:id="@+id/btnClose"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="right|top"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/btn_close" />

    <LinearLayout
        android:id="@+id/llRoundTimerText"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal|bottom"
        android:background="@drawable/winnertimebk"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/nexrroundtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New round begins in "
            android:textColor="@color/yellow"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvRoundNumber"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/redround"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/yellow"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvSecondsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Seconds."
            android:textColor="@color/yellow"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvPointDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="5dp"
        android:text="* DP - Deadwood Points, GP - Gin Points, UC - Undercut"
        android:textColor="@color/yellow"
        android:textSize="14sp" />

    <!--<ImageView
        android:id="@+id/ivVerticleLine1"
        android:layout_width="wrap_content"
        android:layout_height="340dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/line_vertical" />

    <ImageView
        android:id="@+id/ivVerticleLine2"
        android:layout_width="wrap_content"
        android:layout_height="340dp"
        android:layout_gravity="center"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/line_vertical" />-->

</FrameLayout>