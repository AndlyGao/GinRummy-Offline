                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tvEntryPoint"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawableLeft="@drawable/small_chips"
