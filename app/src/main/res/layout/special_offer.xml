<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <FrameLayout
        android:id="@+id/offer_popup"
        android:layout_width="850px"
        android:layout_height="600px"
        android:layout_gravity="center"
        android:background="@drawable/offer_popup">

        <ImageView
            android:id="@+id/header_image"
            android:layout_width="820px"
            android:layout_height="120px"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/offer_header" />

        <ImageView
            android:id="@+id/offer_Main_chip"
            android:layout_width="770px"
            android:layout_height="550px"
            android:layout_gravity="center"
            android:layout_marginTop="25px"
            android:src="@drawable/chips_center" />

        <ImageView
            android:id="@+id/chip_sticker"
            android:layout_width="170px"
            android:layout_height="170px"
            android:layout_gravity="center"
            android:layout_marginRight="220px"
            android:background="@drawable/offer_chips" />

        <ImageView
            android:id="@+id/bottom_header"
            android:layout_width="815px"
            android:layout_height="120px"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="30px"
            android:background="@drawable/bg_bottom" />

        <LinearLayout
            android:id="@+id/ll_bottomheader"
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="30px"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tx_starter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Only For "
                android:textColor="@color/white"
                android:textSize="29px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/price_pack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$3.99 "
                android:textColor="#f2c204"
                android:textSize="49px"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/btn_Buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/btn_buynow" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_middle"
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:layout_gravity="center"
            android:layout_marginTop="85px"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/fl_dash"
                android:layout_width="wrap_content"
                android:layout_height="50px"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_minichip"
                        android:layout_width="45px"
                        android:layout_height="45px"
                        android:src="@drawable/chips" />

                    <TextView
                        android:id="@+id/old_prize"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="1,00,000"
                        android:textColor="@color/white"
                        android:textSize="30px"
                        android:textStyle="bold" />

                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/offer_line" />

            </FrameLayout>


            <LinearLayout
                android:id="@+id/ll_main_offer"
                android:layout_width="match_parent"
                android:layout_height="70px"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_big_chip"
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_gravity="center"
                    android:src="@drawable/chips" />

                <TextView
                    android:id="@+id/new_prize"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="2,00,000"
                    android:textColor="@color/white"
                    android:textSize="48px"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>


    </FrameLayout>

</FrameLayout>