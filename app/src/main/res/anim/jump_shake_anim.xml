    <scale
        android:duration="500"
        android:fillAfter="true"
        android:fromXScale=".7"
        android:fromYScale=".7"
        android:pivotX="50%"
        android:pivotY="50%"
        android:toXScale="1.3"
        android:toYScale="1.3"

        />
